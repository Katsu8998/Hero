package object_oriented;

public class Monster {
	private String name;
	private int hp;//HP
	private int attack;//攻撃力
	private int defense;//防御力

	public void Attack(Unit u) {

	}
	public String getName() {
		return name;
	}

	public void setName(String name) {
		if (name == null) {
			throw new IllegalArgumentException("名前が空欄です。処理を中断します。");
		}this.name = name;
	}

	public int getHp() {
		return hp;
	}

	public void setHp(int hp) {
		if (hp > 100) {
			hp = 100;
		}
		if (hp < 0) {
			hp = 0;
		}
		this.hp=hp;
	}

	public int getAttack() {
		return attack;
	}

	public void setAttack(int attack) {
		if (attack < 0 || attack > 100) {
			throw new IllegalArgumentException("攻撃力が異常です。処理を中断します。");
		}this.attack=attack;
	}

	public int getDefense() {
		return defense;
	}

	public void setDefense(int defense) {
		if (defense < 0 || defense > 100) {
			throw new IllegalArgumentException("防御力が異常です。処理を中断します。");
		}this.defense=defense;
	}
}
