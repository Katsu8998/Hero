package object_oriented;

public class Cleric extends Unit {
	int mp;//魔力

	public Cleric(String name, int hp, int attack, int defense, int mp) {
		this.setName(name);
		this.setHp(hp);
		this.setAttack(attack);
		this.setDefense(defense);
		this.mp = 20;
	}

	public void Attack(Monster m) {
		System.out.println(this.getName() + "は攻撃した!");
		System.out.println(this.getAttack() + "ダメージを与えた!");
		m.setHp(m.getHp() - this.getAttack());
		this.mp -= 3;
	}
}
